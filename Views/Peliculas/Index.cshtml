@model List<PeliculasApp.Models.PeliculaAPI>

@{
    ViewData["Title"] = "Buscar Película";
}
<div class="container">
    <h1>Buscar Película</h1>

    <form asp-action="Buscar" method="post">
        <input type="text" name="titulo" placeholder="Título de la película" />
        <button type="submit">Buscar</button>
    </form>

    @if (Model != null && Model.Any())
    {
        <h2>Películas populares</h2>
        <div style="display: flex; gap: 20px; flex-wrap: wrap;">
            @foreach (var peli in Model)
            {
                <div style="width: 200px;">
                    <img src="@peli.Poster" alt="@peli.Titulo" style="width: 100%;" />
                    <p><strong>@peli.Titulo</strong> (@peli.Año)</p>
                    <form asp-action="Buscar" method="post">
                        <input type="hidden" name="titulo" value="@peli.Titulo" />
                        <button type="submit">Ver detalles</button>
                    </form>
                </div>
            }
        </div>
    }
</div>

